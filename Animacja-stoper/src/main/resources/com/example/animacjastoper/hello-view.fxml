<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.animacjastoper.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="timerText"/>
    <Button text="Start" onAction="#onStartButtonClick"/>
    <Button text="Stop" onAction="#onStopButtonClick"/>
    <Button text="Reset" onAction="#onResetButtonClick"/>
    <Button text="Loop" onAction="#onLoopButtonClick"/>
    <ListView fx:id="loopList"/>
</VBox>